<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gestes"
    android:layout_gravity="center"
    android:background="#E85651"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation='horizontal'
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/icon_pilule"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:src="@drawable/ic_pilule"
                    android:background="@drawable/rounded_red_border"
                    android:backgroundTint="@color/red"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_weight="2"
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_gravity="center"
                    android:text="Pilulier"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="2"
                    android:background="@color/whiteTextColor"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ajouter_traitement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:text="Ajouter"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:onClick="addTraitement"/>


                <TextView
                    android:id="@+id/jour_semaine_pilulier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Jour"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_red_border"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Prochaine prise du jour à : "
                    style="@style/viewParent.headerText.NoMode"
                    android:textColor="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                    <TextView
                        style="@style/viewParent.headerText.NoMode"
                        android:layout_weight="0.75"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:text="8h30"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/red"
                        android:gravity="center"
                        android:background="@drawable/rounded_red_border"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"/>
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.75">
                        <TextView
                            android:id="@+id/Block_8h30"
                            android:maxWidth="250dp"
                            android:layout_width="wrap_content"
                            android:minWidth="170dp"
                            android:minHeight="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle_red_border"
                            android:backgroundTint="@color/white"
                            android:gravity="center"
                            android:text="Problèmes cardiaques "
                            android:textAlignment="center" />
                    </ScrollView>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Validation du traitement de 8h30 :"
                        style="@style/RadioButtonValidationText"/>

                    <RadioButton
                        android:id="@+id/RadioButton8h30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valider"
                        style="@style/RadioButtonValidationText"
                        android:onClick="validate8h30"/>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_weight="0.75"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:text="12h00"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/red"
                            android:gravity="center"
                            android:background="@drawable/rounded_red_border"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"/>

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.75">

                            <TextView
                                android:id="@+id/Block_12h00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="100dp"
                                android:background="@drawable/rectangle_red_border"
                                android:backgroundTint="@color/white"
                                android:gravity="center"
                                android:maxWidth="250dp"
                                android:minWidth="170dp"
                                android:text="Problèmes cardiaques "
                                android:textAlignment="center" />
                        </ScrollView>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Validation du traitement de 12h00 :"
                        style="@style/RadioButtonValidationText"/>

                    <RadioButton
                        android:id="@+id/RadioButton12h00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valider"
                        style="@style/RadioButtonValidationText"
                        android:onClick="validate12h00"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_weight="0.75"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:text="15h00"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/red"
                            android:gravity="center"
                            android:background="@drawable/rounded_red_border"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"/>
                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.75">
                        <TextView
                            android:id="@+id/Block_15h00"
                            android:layout_width="wrap_content"
                            android:minWidth="170dp"
                            android:maxWidth="250dp"
                            android:minHeight="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_red_border"
                            android:gravity="center"
                            android:backgroundTint="@color/white"
                            android:text="Problèmes cardiaques "
                            android:textAlignment="center" />
                        </ScrollView>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Validation du traitement de 15h00 :"
                        style="@style/RadioButtonValidationText"/>

                    <RadioButton
                        android:id="@+id/RadioButton15h00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valider"
                        style="@style/RadioButtonValidationText"
                        android:onClick="validate15h00"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_weight="0.75"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:text="16h30"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/red"
                            android:gravity="center"
                            android:background="@drawable/rounded_red_border"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"/>

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.75">
                        <TextView
                            android:id="@+id/Block_16h30"
                            android:layout_width="wrap_content"
                            android:minWidth="170dp"
                            android:maxWidth="250dp"
                            android:minHeight="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_red_border"
                            android:gravity="center"
                            android:backgroundTint="@color/white"
                            android:text="Problèmes cardiaques "
                            android:textAlignment="center" />
                        </ScrollView>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Validation du traitement de 16h30 :"
                        style="@style/RadioButtonValidationText"/>

                    <RadioButton
                        android:id="@+id/RadioButton16h30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valider"
                        style="@style/RadioButtonValidationText"
                        android:onClick="validate16h30"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_weight="0.75"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:text="22h00"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/red"
                            android:gravity="center"
                            android:background="@drawable/rounded_red_border"/>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"/>

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.75">
                        <TextView
                            android:id="@+id/Block_22h00"
                            android:layout_width="wrap_content"
                            android:minWidth="170dp"
                            android:maxWidth="250dp"
                            android:minHeight="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_red_border"
                            android:gravity="center"
                            android:backgroundTint="@color/white"
                            android:text="Problèmes cardiaques "
                            android:textAlignment="center" />
                        </ScrollView>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Validation du traitement de 22h00 :"
                        style="@style/RadioButtonValidationText"/>

                    <RadioButton
                        android:id="@+id/RadioButton22h00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valider"
                        style="@style/RadioButtonValidationText"
                        android:onClick="validate22h00"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
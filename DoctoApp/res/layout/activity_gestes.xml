<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gestes"
    android:layout_gravity="center"
    android:background="#E85651"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_gestes1" />

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:text="Les Gestes"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="2"
                    android:background="@color/whiteTextColor"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rounded_red_border"
                android:backgroundTint="@color/red"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                >
                <ImageView
                        android:id="@+id/ic_pb_cardiaque"
                        android:layout_width="140dp"
                        android:layout_height="90dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_gestes2"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/rounded_red_border"
                        android:onClick="onPbCardClick"/>
                    <TextView
                        style="@style/viewParent.headerText.NoMode"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Problèmes \ncardiaques"
                        android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rounded_red_border"
                android:backgroundTint="@color/red"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ic_accident_voiture"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_gestes3"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_red_border"
                    android:onClick="onCarAccidentClick"/>
                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="Accidents de\nvoitures"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rounded_red_border"
                android:backgroundTint="@color/red"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ic_brulures"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_gestes4"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_red_border"
                    android:onClick="onBruluresClick"/>
                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:text="Brûlures"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rounded_red_border"
                android:backgroundTint="@color/red"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ic_etouffements"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_gestes5"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_red_border"
                    android:onClick="onEttoufementsClick"/>
                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="Etouffements"
                    android:textAlignment="center"/>
            </LinearLayout>


        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

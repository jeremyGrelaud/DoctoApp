<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#E85651"
    android:gravity="center"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="10dp"
                android:src="@drawable/item_tuteurs"/>

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_gravity="center"

                android:text="Mes Tuteurs"
                android:textAlignment="center"
                android:textColor="@color/whiteTextColor"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="2"
                android:background="@color/whiteTextColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tutor_name"
                style="@style/parent"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:id="@+id/edittutor_name"
                    style="@style/parent"
                    android:backgroundTint="@color/white"
                    android:hint="Nom"
                    android:inputType="text"
                    android:maxLines="1">
                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tutor_firstname"
                style="@style/parent"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edittutor_firstname"
                    style="@style/parent"
                    android:backgroundTint="@color/white"
                    android:hint="Prénom"
                    android:inputType="text"
                    android:maxLines="1">
                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tutor_phone"
                style="@style/parent"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edittutor_phone"
                    style="@style/parent"
                    android:backgroundTint="@color/white"
                    android:hint="N° téléphone"
                    android:inputType="phone"
                    android:maxLines="1">
                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordre de contact en cas d'urgence :"
                android:textColor="@color/whiteTextColor"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/ordre_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_white"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/modifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"

                android:text="Modifier"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="modifyTuteur"/>

            <Button
                android:id="@+id/ajouter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"

                android:text="Ajouter"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="addTuteur"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/actualiser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Actualiser le tableau"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="refreshTab"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                    <TableLayout style="@style/frag1TableLayout"
                        android:id="@+id/table_tuteurs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TableRow style="@style/frag1HeaderTableRow"
                            >
                            <TextView style="@style/frag1HeaderCol" android:text="Nom"
                                android:background="@drawable/table_border_rectangle"/>
                            <TextView style="@style/frag1HeaderCol" android:text="Prénom"
                                android:background="@drawable/table_border_rectangle"/>
                            <TextView style="@style/frag1HeaderCol" android:text="Telephone"
                                android:background="@drawable/table_border_rectangle"/>
                            <TextView style="@style/frag1HeaderCol" android:text="Ordre"
                                android:background="@drawable/table_border_rectangle"/>
                        </TableRow>

                        <!--Ajout de 'TableRow' dynamiquement avec en Java-->
                    </TableLayout>


            </ScrollView>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>